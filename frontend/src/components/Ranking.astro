---
export interface RelayProps {
  Relay: string;
  "Total value (ETH)": string;
  "# Payloads": number;
}

export interface BuilderProps {
  Builder: string;
  "# Payloads": number;
}

export interface Props {
  title: string;
  context: string;
  data: RelayProps[] | BuilderProps[];
}

const { title, context, data } = Astro.props as Props;
---

<div class="ranking">
  {/* Title + description */}
  <div class="ranking-title">
    <h3>{title}</h3>
    <p>{context}</p>
  </div>

  {/* Tabular list */}
  <div class="ranking-table">
    <table>
      {/* Render headers */}
      <tr>
        {Object.keys(data[0] ?? []).map((key: string) => <th>{key}</th>)}
      </tr>

      {/* Render rows */}
      {
        data.map((row: RelayProps | BuilderProps) => (
          <tr>
            {Object.values(row).map((val) => (
              <td>{val}</td>
            ))}
          </tr>
        ))
      }
    </table>
  </div>
</div>

<style lang="scss">
  .ranking {
    width: 50%;
    border-bottom: 1px solid #ececec;

    &:not(last-of-type) {
      border-right: 1px solid #ececec;
    }

    .ranking-title {
      padding: 24px;
      border-bottom: 1px solid #ececec;
      background-color: rgba(0, 0, 0, 0.02);

      h3 {
        margin: 0px;
        margin-bottom: 5px;
        font-size: 16px;
        color: rgba(0, 0, 0, 0.8);
      }

      p {
        margin: 0px;
        font-size: 14px;
        line-height: 150%;
      }
    }

    .ranking-table {
      overflow-x: auto;

      table {
        width: 100%;
        border-spacing: 0px;
        min-width: 600px;

        tr {
          th {
            font-size: 13px;
            color: rgba(0, 0, 0, 0.5);
            font-family: monospace;
            text-transform: uppercase;
          }

          td {
            font-size: 15px;
          }

          th,
          td {
            text-align: left;
            border-bottom: 1px solid #ececec;
            padding: 8px 24px;
          }
        }
      }
    }
  }

  @media screen and (max-width: 800px) {
    .ranking {
      width: 100%;

      .ranking-table {
        tr:last-of-type {
          th,
          td {
            border-bottom: none;
          }
        }
      }
    }
  }
</style>
